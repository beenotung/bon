{
  "name": "bon",
  "version": "0.0.0",
  "description": "BON - Binary Object Notation, A.K.A. Beeno Object Notation",
  "main": "dist/index.js",
  "author": "Beeno Tung",
  "license": "BSD-3-Clause",
  "scripts": {
    "clean": "rm bon.*",
    "build": "tsc -p ./",
    "lint": "npm-run-all lint:*",
    "lint:tsc": "tslint --type-check --project tsconfig.json -c tslint.json",
    "lint:ionic": "ionic-app-scripts lint",
    "fix-lint": "tslint --fix -p .",
    "pretest": "npm-run-all build lint || exit 0",
    "test": "node bon_test.js",
    "prebuild:test-web": "npm run pretest",
    "build:test-web": "browserify bon_test.js > test/bon_test.js",
    "test:web": "npm run build:test-web xdg-open test/bon_test.html",
    "prepublishOnly": "npm run build",
    "precommit": "npm run fix-lint",
    "commit": "git gui",
    "postcommit": "git push"
  },
  "keywords": [
    "BON",
    "data",
    "format",
    "parser",
    "serializer",
    "deocer",
    "encoder"
  ],
  "devDependencies": {
    "@angular/compiler": ">=4.0.0-beta",
    "@angular/core": ">=4.0.0-beta",
    "browserify": "^14.5.0",
    "codelyzer": "^3.2.2",
    "npm-run-all": "^4.1.1",
    "rxjs": "^5.0.1",
    "tslint": "^5.8.0",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.6.1",
    "zone.js": "^0.8.4"
  }
}
